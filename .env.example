# Calendar settings
SOURCE_CALENDAR_URL=https://caldav.tutanota.com/calendars/youruser/yourcalendar/
SOURCE_CALENDAR_USERNAME=your_email@tutanota.com
SOURCE_CALENDAR_PASSWORD=your_app_password

DESTINATION_CALENDAR_URL=https://caldav.tutanota.com/calendars/youruser/transitcalendar/
DESTINATION_CALENDAR_USERNAME=your_email@tutanota.com
DESTINATION_CALENDAR_PASSWORD=your_app_password

# Email alert settings
SMTP_SERVER=server
SMTP_PORT=587
SMTP_USERNAME=email@email.com
SMTP_PASSWORD=password
ALERT_EMAIL_FROM=email@email.com
ALERT_EMAIL_TO=recipient@email.com
SMTP_USE_TLS=true

# HERE API settings
HERE_API_KEY=your_here_api_key

# Home location and transit defaults
HOME_ADDRESS="123 Main St, Your City, Your Country"
DEFAULT_TRANSIT_MODE=transit

# Time settings
LOOK_FORWARD_DAYS=28
CALENDAR_CHECK_INTERVAL=15
DAILY_UPDATE_TIME=01:00
MAX_TRANSIT_TIME_HOURS=3

# Database
DB_PATH=./data/transit-calendar.sqlite

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/transit-calendar.log